{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{","}"],
    ["[","]"],
    ["(",")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string","comment"] }
  ],
  "surroundingPairs": [
    ["{","}"],
    ["[","]"],
    ["(",")"],
    ["'","'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "(?x)(\\{\\s*$)|(\\b(se|senao|enquanto|repita)\\b.*\\{\\s*$)",
    "decreaseIndentPattern": "^\\s*\\}"
  }
}
